{
  "component": "button",
  "syntax": "<button class='{{CLASSNAME}}' data-size='{{SIZE}}' data-variant='{{VARIANT}}'>â€¦</button>",
  "attributes": {
    "className": { "required": true },
    "size": { "enum": ["md", "lg", "xl", "2xl", "3xl", "4xl"], "required": true },
    "variant": { "enum": ["primary", "secondary", "neutral", "line1", "line2"], "default": "primary" },
    "ariaLabel": { "optional": true },
    "label": { "optional": true },
    "icon": { "optional": true },
    "iconClass": { "optional": true },
    "labelClass": { "optional": true },
    "tabIndex": { "optional": true },
    "disabled": { "optional": true },
    "path": { "optional": true }
  },
  "binding": { "path": "instanceData[PATH]", "type": "string" },
  "defaults": [
    {
      "id": "button-ictxt",
      "sizes": ["md", "lg", "xl", "2xl", "3xl", "4xl"],
      "variants": ["primary", "secondary", "neutral", "line1", "line2"],
      "spec": [
        "diet-btn-ictxt",
        "data-size='{{size}}'",
        "data-variant='{{variant}}'"
      ],
      "context": {
        "className": "diet-btn-ictxt {{bodyClass}}",
        "iconClass": "diet-btn-ictxt__icon",
        "labelClass": "diet-btn-ictxt__label {{bodyClass}}",
        "size": "md",
        "variant": "primary",
        "label": "Button",
        "icon": "sparkles"
      }
    },
    {
      "id": "button-ic",
      "sizes": ["md", "lg", "xl", "2xl", "3xl", "4xl"],
      "variants": ["primary", "secondary", "neutral", "line1"],
      "spec": [
        "diet-btn-ic",
        "data-size='{{size}}'",
        "data-variant='{{variant}}'"
      ],
      "context": {
        "className": "diet-btn-ic {{bodyClass}}",
        "iconClass": "diet-btn-ic__icon",
        "labelClass": "",
        "size": "md",
        "variant": "neutral",
        "icon": "gearshape",
        "ariaLabel": "Icon button"
      }
    },
    {
      "id": "button-txt",
      "sizes": ["md", "lg", "xl", "2xl", "3xl", "4xl"],
      "variants": ["primary", "secondary", "neutral", "line1", "line2"],
      "spec": [
        "diet-btn-txt",
        "data-size='{{size}}'",
        "data-variant='{{variant}}'"
      ],
      "context": {
        "className": "diet-btn-txt {{bodyClass}}",
        "iconClass": "",
        "labelClass": "diet-btn-txt__label {{bodyClass}}",
        "size": "md",
        "variant": "primary",
        "label": "Text button"
      }
    }
  ]
}
